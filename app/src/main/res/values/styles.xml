<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--<style name="AppTheme.AppStartLoad">
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>-->

    <!--对话框样式-->
    <style name="progress_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--UI 样式-->
    <style name="AppTheme.UI">
    </style>

    <style name="AppTheme.UI.ButtonRed">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="AppTheme.UI.EditText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.UI.TitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.UI.PannelText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.UI.PannelText.InputTitle">
        <item name="android:textColor">#ff5d4c</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.UI.List">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.UI.List.Item">
        <item name="android:textColor">#8a8888</item>
    </style>

    <style name="AppTheme.UI.Form">
        <item name="android:textColor">#8a8888</item>
    </style>

    <style name="AppTheme.UI.Form.TitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.UI.Form.SectionText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.UI.Form.ItemNameText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.UI.Form.ItemValueText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.UI.Form.TotalText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.UI.NotificationBox">
        <item name="android:textColor">#ff5d4c</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.UI.NotificationBox.Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_show</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_hide</item>
    </style>
</resources>
