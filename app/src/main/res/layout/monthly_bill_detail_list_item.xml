<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/panel_white"
              android:clickable="true"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/AppTheme.UI.Form.SectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="机票"/>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/date"
            style="@style/AppTheme.UI.Form.ItemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-08-11"/>

        <TextView
            android:id="@+id/memo"
            style="@style/AppTheme.UI.Form.ItemNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="memo"/>

        <TextView
            android:id="@+id/cost"
            style="@style/AppTheme.UI.Form.ItemValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:text="$100"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                style="@style/AppTheme.UI.Form.SectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_detail_total"/>

            <TextView
                android:id="@+id/total_cost"
                style="@style/AppTheme.UI.Form.TotalText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="$100"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>